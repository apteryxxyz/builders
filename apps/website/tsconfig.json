{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": [".next/", "*.config.*"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true
  }
}
